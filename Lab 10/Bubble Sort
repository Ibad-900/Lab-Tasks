#include <iostream>
#include <fstream>
#include <sstream>
#include <chrono>
using namespace std;
using namespace std::chrono;

void bubbleSort(int arr[], int n)
{
    bool swapped;
    for (int i = 0; i < n - 1; i++)
    {
        swapped = false;
        for (int j = 0; j < n - i - 1; j++)
        {
            if (arr[j] > arr[j + 1])
            {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = true;
            }
        }
        if (!swapped) break;
    }
}

int main()
{
    ifstream file("numbers.txt");
    if (!file)
    {
        cout << "Error opening file!" << endl;
        return 0;
    }

    string line, value;
    getline(file, line);
    file.close();

    stringstream ss(line);
    int MAX_READ = 5000;
    int* arr = new int[MAX_READ];
    int index = 0;

    while (getline(ss, value, ',') && index < MAX_READ)
        arr[index++] = stoi(value);

    cout << "Total numbers loaded: " << index << endl;

    auto start = high_resolution_clock::now();
    bubbleSort(arr, index);
    auto end = high_resolution_clock::now();

    auto ms = duration_cast<milliseconds>(end - start).count();
    cout << "Time Taken: " << ms << " ms" << endl;

    delete[] arr;
    return 0;
}

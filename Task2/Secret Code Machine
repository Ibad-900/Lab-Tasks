#include <iostream>
using namespace std;

int generateCode(int n) {
	int product = 1;
    if (n == 0) {
    	return 1;
	}
    for (int i = n; i >= 1; i--) {
        product *= i;
    }
    return product;
}

int main() {
    int (*code)(int) = generateCode;
    int num;
    cout<<"Enter a number: ";
    cin>>num;
    int secretCode = (*code)(num);
    cout<<"The secret code is: "<<secretCode<<endl;
    return 0;
}
